<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/titleblack"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/interval"
            android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@color/titleblack">

            <Button
                    android:id="@+id/bt_cancle"
                    android:layout_toRightOf="@+id/iv_back"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PersonalInformation"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/quit"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
            />

        </RelativeLayout>
        <LinearLayout
                android:layout_below="@+id/rl_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >

            <RelativeLayout
                    android:id="@+id/rl_gender"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_marginTop="20sp"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20sp"
                />
                <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/boy"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20sp"
                        android:layout_toLeftOf="@+id/iv_gender_enter"
                />
                <ImageView
                        android:id="@+id/iv_gender_enter"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:background="@drawable/jt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20sp"
                        android:layout_centerVertical="true"/>

            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_area"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_marginTop="10sp"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20sp"
                />

            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_Signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Signature"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20sp"
                />
                <TextView
                        android:id="@+id/tv_Signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Muddy"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20sp"
                        android:layout_toLeftOf="@+id/iv_Signature_enter"
                />
                <ImageView
                        android:id="@+id/iv_Signature_enter"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:background="@drawable/jt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20sp"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>