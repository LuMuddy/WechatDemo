<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:layout_below="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >
        <RelativeLayout
                android:id="@+id/rl_Personal_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
        >
            <ImageView
                    android:id="@+id/iv_CircleFriends"
                    android:layout_marginLeft="20sp"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_launcher"
            />
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_toRightOf="@+id/iv_CircleFriends"
                          android:layout_centerVertical="true">
                <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Muddy"
                        android:layout_marginLeft="20sp"
                />
                <TextView
                        android:id="@+id/tv_wechat_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/WechatNum"
                        android:layout_marginLeft="20sp"
                        android:layout_toRightOf="@+id/iv_CircleFriends"
                />
            </LinearLayout>

            <ImageView
                    android:id="@+id/iv_qc"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:background="@mipmap/ic_launcher"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_enter"
                    android:layout_marginRight="20sp"
            />

            <ImageView
                    android:id="@+id/iv_enter"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:background="@drawable/jt"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:layout_centerVertical="true"/>


        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/rl_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
        >
            <ImageView
                    android:id="@+id/iv_wallet"
                    android:layout_marginLeft="20sp"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_launcher"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wallet"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20sp"
                    android:layout_toRightOf="@+id/iv_wallet"
                    android:layout_alignParentTop="true"/>

            <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:background="@drawable/jt"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_Authorization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
        >
            <ImageView
                    android:id="@+id/iv_Authorization"
                    android:layout_marginLeft="20sp"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_launcher"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Authorization"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20sp"
                    android:layout_toRightOf="@+id/iv_Authorization"
                    android:layout_alignParentTop="true"/>

            <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:background="@drawable/jt"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:layout_centerVertical="true"/>

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/rl_Album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
        >
            <ImageView
                    android:id="@+id/iv_Album"
                    android:layout_marginLeft="20sp"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_launcher"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Album"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20sp"
                    android:layout_toRightOf="@+id/iv_Album"
                    android:layout_alignParentTop="true"/>

            <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:background="@drawable/jt"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:layout_centerVertical="true"/>

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/rl_CardPackage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
        >
            <ImageView
                    android:id="@+id/iv_CardPackage"
                    android:layout_marginLeft="20sp"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_launcher"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/CardPackage"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20sp"
                    android:layout_toRightOf="@+id/iv_CardPackage"
                    android:layout_alignParentTop="true"/>

            <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:background="@drawable/jt"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:layout_centerVertical="true"/>

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/rl_Expression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
        >
            <ImageView
                    android:id="@+id/iv_Expression"
                    android:layout_marginLeft="20sp"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_launcher"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Expression"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20sp"
                    android:layout_toRightOf="@+id/iv_Expression"
                    android:layout_alignParentTop="true"/>

            <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:background="@drawable/jt"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_Setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
        >
            <ImageView
                    android:id="@+id/iv_Setting"
                    android:layout_marginLeft="20sp"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_launcher"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Setting"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20sp"
                    android:layout_toRightOf="@+id/iv_Setting"
                    android:layout_alignParentTop="true"/>

            <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:background="@drawable/jt"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:layout_centerVertical="true"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>