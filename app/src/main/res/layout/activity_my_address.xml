<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white">
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/titleblack"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@color/titleblack"
        >

            <Button
                    android:id="@+id/bt_return"
                    android:layout_toRightOf="@+id/iv_back"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/breaks"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/quit"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
            />
            <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MyAddress"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"/>

        </RelativeLayout>
        <RelativeLayout
                android:layout_below="@+id/rl_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
            <ListView
                    android:layout_marginTop="20sp"
                    android:id="@+id/lv_address"
                    android:divider="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    />
            <RelativeLayout
                    android:background="@color/white"
                    android:layout_below="@+id/lv_address"
                    android:id="@+id/rl_Signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100sp"
            >
                <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:background="@mipmap/ic_launcher"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20sp"
                        android:layout_alignParentTop="true"/>


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/AddAddress"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/iv_add"
                        android:layout_marginLeft="20sp"
                />

                <ImageView
                        android:id="@+id/iv_Signature_enter"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:background="@drawable/jt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20sp"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>